{
  "name": "Note to self",
  "version": "1.0",
  "manifest_version": 2,
  "description": "A web cliping / highlighting / notation tool for Google Crome",
  "homepage_url": "http://www.lucidmoon.co.uk",
  "icons": {
    "128": "icon_128.png"
  },
  "permissions": [
      "contextMenus",
      "tabs"
  ],
  "background": {
    "scripts": ["lodash.js","background.js"]
  },
  "content_scripts": [
    {
      "matches": ["http://*/*","https://*/*"],
      "css": ["content.css"],
      "js": ["jquery.js","jquery.highlight.js","lodash.js", "content.js"]
    }
  ],
  "options_page": "feed.html",
  "browser_action": {
    "name":   "Note to self",
    "default_icon": {
      "19": "icon_19.png"
    }
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"

}